# Supabase local settings (replace after `npx supabase status -o json`)
NEXT_PUBLIC_SUPABASE_URL=http://localhost:54321
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-local-anon-key
SUPABASE_URL=http://localhost:54321
SUPABASE_SERVICE_ROLE_KEY=your-local-service-role-key

# Demo Basic Auth (set both to enable)
DEMO_BASIC_USER=demo
DEMO_BASIC_PASS=demo-password

# LINE Messaging API
LINE_CHANNEL_SECRET=your-line-channel-secret
LINE_CHANNEL_ACCESS_TOKEN=your-line-channel-access-token
# 授業曜日 (0=日曜,6=土曜)。複数ある場合はカンマ区切りで指定。
LINE_LESSON_WEEKDAYS=6

# Optional: public URL used in LINE reply copy (e.g., https://your-demo.vercel.app)
APP_BASE_URL=http://localhost:3000
